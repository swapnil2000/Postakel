generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/master"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_MASTER")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String?
  restaurants Restaurant[]
}

model Restaurant {
  id         String   @id @default(uuid())
  name       String
  uniqueCode String   @unique // 7-digit code
  dbUrl      String   // connection string for the tenant DB
  createdAt  DateTime @default(now())
  users      User[]   @relation(fields: [userId], references: [id])
  userId     String
}
