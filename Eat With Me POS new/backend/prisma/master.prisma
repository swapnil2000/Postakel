generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/master"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_MASTER")
}

model Restaurant {
  id            String   @id @default(uuid())
  name          String
  uniqueCode    String   @unique // 7-digit code
  dbUrl         String   // connection string for the tenant DB
  createdAt     DateTime @default(now())
  userId        String?  // previously from UserRestaurant
  userEmail     String?  // previously from User
  userPassword  String?  // previously from User
  userName      String?  // previously from User
}
